#!/usr/bin/env bash
# Script to change localhost and facebook.com IP resolution

# Ensure the script is run with sudo
if [ "$(id -u)" -ne 0 ]; then
    echo "Please run this script as root or using sudo."
    exit 1
fi

# Backup the current /etc/hosts file
cp /etc/hosts /etc/hosts.backup

# Update the /etc/hosts file with the new IP addresses
echo -e "127.0.0.2 localhost\n8.8.8.8 facebook.com" >> /etc/hosts

echo "IP addresses have been updated."